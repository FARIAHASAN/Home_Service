                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Pricing"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

            <RadioGroup
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_group_background">
<RadioButton
  android:id="@+id/radio1day"
    style="@style/radioButton"
    android:text="price for 1 day"
    android:background="@drawable/radio_on"
    >
    >


</RadioButton>

                <RadioButton
                    android:background="@drawable/radio_off"
                    android:id="@+id/radio1week"
                    style="@style/radioButton"
                    android:text="price for 1 week"

                    >


                </RadioButton>



                <RadioButton
                    android:background="@drawable/radio_off"
                    android:id="@+id/radio1month"
                    style="@style/radioButton"
                    android:text="price for 1 month"

                    >


                </RadioButton>
                <RadioButton
                    android:background="@drawable/radio_off"
                    android:id="@+id/radio6month"
                    style="@style/radioButton"
                    android:text="price for 6 months"

                    >


                </RadioButton>
            </RadioGroup>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price is"
                    android:id="@+id/see">

                </TextView>
            </LinearLayout>
