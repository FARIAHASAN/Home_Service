            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/name"
            android:text="Candidate Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
