    <RelativeLayout
        android:layout_width="734dp"
        android:layout_height="154dp"
        android:layout_marginStart="5sp"
        android:background="#F4F1F1"
        android:padding="15dp">


        <TextView
            android:id="@+id/ServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10sp"

            android:fontFamily="@font/aladin"
            android:text="This is Demo ServiceName"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ProviderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ServiceName"
            android:layout_marginLeft="10dp"

            android:fontFamily="@font/aladin"
            android:text="This is Demo ProviderName"
            android:textColor="#000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/ProviderPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProviderName"
            android:layout_marginLeft="10dp"

            android:fontFamily="@font/aladin"
            android:text="This is ProviderPhone"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ServicePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProviderPhone"
            android:layout_marginLeft="10dp"

            android:fontFamily="@font/aladin"
            android:text="This is ServicePrice"
            android:textColor="#000"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>