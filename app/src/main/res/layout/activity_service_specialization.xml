<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignUp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignUp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Provide Your Details"
      android:layout_marginBottom="20dp"
      android:textSize="25dp"
      android:textStyle="bold"
      android:fontFamily="@font/aladin"
      >

  </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/descriptionTL"


                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:background="#EFECEC"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:id="@+id/descriptionET"
                    android:fontFamily="@font/aladin"/>


            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:srcCompat="@drawable/ic_launcher_background"
        android:layout_marginTop="20dp"

                />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/browse"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:text="Add Your Photo"
        android:fontFamily="@font/aladin"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView

            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:padding="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:text="Select Service Type"
            android:fontFamily="@font/aladin"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/user_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"

            />
    </LinearLayout>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/pdf"
        android:hint="Select CV from Storage"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aladin"

        />





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitpdf"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_back_submit"
        android:text="Submit"
        android:fontFamily="@font/aladin"
        
        android:textAllCaps="false"
        android:textSize="16sp" />

        </LinearLayout>




</LinearLayout>

</ScrollView>